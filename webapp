<!DOCTYPE html>
<html>
<head>
  <title>Bingo Card</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      text-align: center;
      padding: 20px;
    }
    .card {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 8px;
      margin: 20px auto;
      width: 260px;
    }
    .cell {
      background: white;
      border: 1px solid #ccc;
      padding: 15px;
      border-radius: 6px;
      font-weight: bold;
      cursor: pointer;
    }
    .cell.active {
      background: #4CAF50;
      color: white;
    }
  </style>
</head>
<body>
  <h2>Bingo Card</h2>
  <div class="card" id="bingoCard"></div>

  <script>
    function sample(start, end, count) {
      const nums = [];
      for (let i = start; i <= end; i++) nums.push(i);
      for (let i = nums.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [nums[i], nums[j]] = [nums[j], nums[i]];
      }
      return nums.slice(0, count);
    }

    const columns = [
      sample(1, 15, 5),
      sample(16, 30, 5),
      sample(31, 45, 5),
      sample(46, 60, 5),
      sample(61, 75, 5)
    ];

    const card = document.getElementById('bingoCard');
    for (let r = 0; r < 5; r++) {
      for (let c = 0; c < 5; c++) {
        const cell = document.createElement('div');
        cell.className = 'cell';
        cell.textContent = (r === 2 && c === 2) ? 'FREE' : columns[c][r];
        cell.onclick = () => cell.classList.toggle('active');
        card.appendChild(cell);
      }
    }
  </script>
</body>
</html>
